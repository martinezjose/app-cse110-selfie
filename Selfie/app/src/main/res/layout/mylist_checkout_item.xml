<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkout_checkBox"
        android:singleLine="false"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/checkout_quantityCounter"
        android:layout_marginRight="135dp"
        android:enabled="false"
        android:layout_alignBottom="@+id/checkout_itemName"
        android:layout_toLeftOf="@+id/checkout_itemPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/checkout_itemPrice"
        android:layout_alignTop="@+id/checkout_quantityCounter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/checkout_itemName"
        android:layout_marginLeft="66dp"
        android:layout_alignTop="@+id/checkout_checkBox"
        android:layout_toRightOf="@+id/checkout_checkBox"
        android:layout_marginTop="6dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/right"
        android:layout_alignTop="@+id/left"
        android:layout_toLeftOf="@+id/checkout_quantityCounter"
        android:layout_marginRight="27dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/left"
        android:layout_marginRight="22dp"
        android:layout_alignTop="@+id/checkout_checkBox"
        android:layout_toLeftOf="@+id/right"
        android:layout_marginTop="12dp" />

</RelativeLayout>