<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkout_checkBox"
        android:singleLine="false"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/checkout_quantityCounter"
        android:layout_marginRight="102dp"
        android:enabled="false"
        android:singleLine="true"
        android:layout_alignTop="@+id/right"
        android:layout_toLeftOf="@+id/checkout_itemPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/checkout_itemPrice"
        android:layout_marginRight="52dp"
        android:numeric="decimal"
        android:maxLength="8"
        android:phoneNumber="true"
        android:layout_alignTop="@+id/checkout_quantityCounter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/checkout_itemName"
        android:layout_marginLeft="66dp"
        android:layout_alignTop="@+id/checkout_checkBox"
        android:layout_toRightOf="@+id/checkout_checkBox"
        android:layout_marginTop="6dp" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/right"
        android:layout_marginRight="60dp"
        android:layout_alignTop="@+id/checkout_checkBox"
        android:layout_toLeftOf="@+id/checkout_quantityCounter" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/left"
        android:layout_alignTop="@+id/right"
        android:layout_toLeftOf="@+id/right"
        android:layout_marginRight="20dp" />

</RelativeLayout>